{
    "name": "Hashicorp direct install from mirror",
    "id": "hashicorp-mirror",
    "version": "2.0.0",
    "description": "Download hashicorp product from any mirror you like (support x86/arm aarch)",
    "options": {
        "version": {
            "type": "string",
            "default": "1.8.4",
            "description": "hashicorp product version"
        },
        "mirror": {
            "type": "string",
            "default": "hashicorp-releases.yandexcloud.net",
            "description": "Set hashicorp mirror link"
        },
        "products": {
            "type": "string",
            "proposals": [
                "packer,terraform,vault",
                "envoy",
                "consul",
                "vault"
            ],
            "default": "terraform",
            "description": "Set hashicorp product name with ',' for list installed from mirror (for example https://hashicorp-releases.yandexcloud.net)"
        }
    }
}
